<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Trading Notes</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Full", "Portfolio")">Transactions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Alerts", "Portfolio")">Alerts</a>
                    </li>

                    <button style="color:white; background-color:black; border-color:black" id="addMarketReturnButton" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMarketReturnModal">
                        Add Market Return
                    </button>


                </ul>
            </div>
        </div>
        <!-- טופס להוספת תשואת המדד -->
        <!-- טופס להוספת תשואת המדד -->
        <div class="modal fade" id="addMarketReturnModal" tabindex="-1" aria-labelledby="addMarketReturnModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addMarketReturnModalLabel">Add Market Return</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="addMarketReturnForm" action="/Portfolio/AddMarketReturn" method="post">
                            <div class="mb-3">
                                <label for="month" class="form-label">Month:</label>
                                <select id="month" name="month" class="form-control" required>
                                    @for (int i = 1; i <= 12; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="year" class="form-label">Year:</label>
                                <input type="number" id="year" name="year" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="returnPercentage" class="form-label">Return (%):</label>
                                <input type="number" id="returnPercentage" name="returnPercentage" class="form-control" step="0.01" required>
                            </div>
                            <button type="submit" class="btn btn-success">Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </nav>
    <div class="container mt-4">
        @RenderBody()
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>

</body>
</html>
